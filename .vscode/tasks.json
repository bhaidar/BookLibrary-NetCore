{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceRoot}/BookLibrary-NetCore.sln"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "xunit",
                "-verbose"
            ],
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceRoot}/BookLibrary.Test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}